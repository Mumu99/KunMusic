.login-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
/* 头部 */
.login-title {
  position: relative;
  display: flex;
  align-self: flex-start;
  margin: 20rpx 0 0 20rpx;
}

.login-title .login-bg {
  font-size: 100rpx;
  color: #faf5f5;
}
.login-title .login-text {
  position: absolute;
  bottom: 18rpx;
  left: 40rpx;
  font-size: 50rpx;
  color: #85817d;
  width: 300rpx;
}
/* 主体登录 */
.login-form {
  width: 80%;
}
.login-form .form-phone,
.login-form .form-password {
  padding: 20rpx;
  background-color: #f8f6fb;
  margin-bottom: 40rpx;
  border-radius: 8rpx;
}
.login-form .form-phone input,
.login-form .form-password input {
  padding: 10rpx 0;
}
.login-form .form-phone text,
.login-form .form-password text {
  margin-bottom: 20rpx;
}

.form-submit {
  margin: 70rpx 0 40rpx;
}
.form-submit button {
  background-color: #d43b33;
  color: #f8f8f8;
  width: 100% !important;
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  font-weight: normal;
}
.form-forget {
  text-align: center;
  color: #4f86d8;
  font-size: 26rpx;
}

/* 底部 */
.footer {
  padding: 100rpx;
  font-size: 26rpx;
}
.footer .footer-sign-up {
  color: #4f86d8;
}

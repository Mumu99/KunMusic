/* pages/index/index.wxss */
.font-break {
  word-break: break-all;
}

.content-wrap {
  width: 100%;
}

.page-swiper {
  width: 100%;
  height: 300rpx;
}

.swiper-item {
  color: #000;
}

.swiper-item-image {
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.nav-container {
  width: 100%;
  display: flex;
  margin-top: 10rpx;
}

.nav-container .nav-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  background-color: #ec4242;
  font-size: 50rpx;
  color: #fff;
  line-height: 100rpx;
  margin: 20rpx 0;
}

.nav-item text {
  font-size: 26rpx;
}

/* 每日推荐 */
.recommend-container,
.top-list {
  padding: 20rpx;
}

.recommend-container .recommend-main {
  display: flex;
  height: 280rpx;
}

.recommend-main .main-song {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  margin-left: 20rpx;
}

.recommend-main .main-song:first-child {
  margin: 0;
}

.main-song .song-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.main-song .song-desc {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 纵向对齐 */
  -webkit-line-clamp: 2;
  /* 2 */
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 排行榜 */
.top-list .top-list-swiper {
  height: 680rpx;
}
.top-list .top-list-swiper .swiper-item {
  width: 96%;
  background-color: #fbfbfb;
}
.top-list .title {
  padding-bottom: 10px;
  font-size: 30rpx;
}
.top-list .music-item {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.top-list .music-item .music-item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.top-list .music-item .music-item-count {
  margin: 0 40rpx;
}
.top-list .music-item .music-item-name {
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
